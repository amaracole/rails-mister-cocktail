
<div class="container">
  <div class="card-product">
    <%= cl_image_tag(@cocktail.photo.key, width: 400, height: 300, crop: :fill) %>
    <div class="card-product-infos container">
      <div class="row">
      <div class="col col-md-6">
        <h1><%= @cocktail.name %></h1>
        <h2>Ingredients & Doses</h2>
        <% @cocktail.doses.each do |dose| %>
          <p>  <%= dose.ingredient.name %>: <%= dose.description %>
            <%= link_to "(Delete)", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %>
          </p>
        <% end %>
      </div>

      <div>
        <h2>Add dose</h2>
        <%= simple_form_for [@cocktail, @dose] do |f| %>
          <%= f.association :ingredient, label_method: :name, value_method: :id, include_blank: false %>
          <%= f.input :description %>
          <%= f.submit class: "btn btn-dark" %>
        <% end %>
      </div>
      </div>
    </div>
  </div>
</div>
