
<div class="container">


  <div class="card-product">
    <%= cl_image_tag(@cocktail.photo.key, width: 400, height: 300, crop: :fill) %>
    <div class="card-product-infos">
      <h1><%= @cocktail.name %></h1>
      <h2>Ingredients & Doses</h2>
      <% @cocktail.doses.each do |dose| %>
        <p>  <%= dose.ingredient.name %>: <%= dose.description %>
          <%= link_to "(Delete)", dose_path(dose), method: :delete, data: { confirm: "Are you sure?" } %>
        </p>
    <% end %>
    </div>
      <%= link_to "Add dose", new_cocktail_dose_path(@cocktail), class: "btn btn-ghost" %>
  </div>

    <%= link_to "Cocktails", cocktails_path, class: "btn btn-ghost" %>
</div>
