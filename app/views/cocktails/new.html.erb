

<div class="container">
  <h5>Create a new cocktail</h5>
  <div class="row">
    <div class="col col-6">
      <%= simple_form_for(@cocktail) do |f| %>
        <%= f.input :name %>
        <%= f.input :photo, as: :file, class: "btn btn-ghost" %>
        <%= f.submit class: "btn btn-dark" %>
      <% end %>
    </div>
  </div>
</div>
